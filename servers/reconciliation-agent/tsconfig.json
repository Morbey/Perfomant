{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "index.ts",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}